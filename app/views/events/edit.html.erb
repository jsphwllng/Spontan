<div class="container create-event" style="color: white">

  <h1 style="color: white">Update your event</h1>
  <div class="row">
    <div class="column">
      <%= simple_form_for @event, defaults: { input_html: { class: 'input-form-new-events' } } do |f| %>

<%#= f.input :email, placeholder: 'Email'

      <%= f.input :title %>
      <%= f.input :category, collection: (["sports", "party", "drinking", "social", "yoga", "spiritual", "dancing", "misc", "studying", "political", "food", "board games", "culture"]), placeholder: 'Category'%>
      <%= f.input :description %>
      <%= f.input :maximum_users %>
      <%= f.input :location %>
      <%= f.input :date, as: :string, required: true, input_html: {class: "datepicker"} %>
      <%= f.input :photo, as: :file, required: true, input_html: { class: 'file-input' } %>
      <%= f.submit "Update", class: "btn btn-primary" %>
      <% end %>

    </div>
  </div>
</div>

