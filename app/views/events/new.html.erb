
<div class="container create-event" style="color: white">

    <h1 style="color: white">Create a new event</h1>
     <div class="row">
    <div class="column">
      <%= simple_form_for @event, defaults: { input_html: { class: 'input-form-new-events' } } do |f| %>
                  <%= f.input :title %>
                  <%= f.input :category, collection: Event::CATEGORIES %>
                  <%= f.input :description %>
                  <%= f.input :maximum_users %>
                  <%= f.input :location %>
                  <%= f.input :date, input_html: { class: 'date-input' } %>
                  <%= f.input :photo, as: :file, input_html: { class: 'file-input' } %>
                  <%= f.submit "Create", class: "btn btn-two" %>
                <% end %>
    </div>
    <div class="column map-column">
      <img src="https://i.imgur.com/Ce8Du0x.jpg" class="map-img" alt="image map">
    </div>
  </div>
</div>
