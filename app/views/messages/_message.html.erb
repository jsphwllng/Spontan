<div class="message-container" id="message-<%= message.id %>">
	<i class="author">
		<span> <% if message.user.photo.attached?%>
			<%= cl_image_tag message.user.photo.key, style:"width: 30px; height:30px", class:"rounded-circle" %>
			<% else %>	
			<img src="https://res.cloudinary.com/dbbmbbgju/image/upload/v1598524883/New_Project_ykwpvb.jpg" alt="" class ="rounded-circle" style="width: 30px; height: 30px">
			<% end %> <strong>
				<%= message.user.username %></strong></span>
				<small><%= message.created_at.strftime("%a %b %e at %l:%M%p") %></small>
			</i>
			<p><%= message.content %></p>
		</div>
